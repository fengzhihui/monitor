	</servlet>
	<servlet-mapping>
		<servlet-name>pushlet</servlet-name>
		<url-pattern>/pushlet.srv</url-pattern>
	</servlet-mapping>
	 -->
	<!-- push servlet end -->



	
	<welcome-file-list>
		<welcome-file>/webpage/manage/login/preLogin.jsp</welcome-file>
	</welcome-file-list>

</web-app>